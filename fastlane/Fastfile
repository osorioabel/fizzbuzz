fastlane_version "2.62.1"

default_platform :ios

platform :ios do
  before_all do
    cocoapods
  end

  desc "Runs all the tests"
  lane :test do
    scan(
      scheme: "FizzBuzz",
      workspace: "FizzBuzz.xcworkspace",
      output_directory: "fastlane/test_output/",
      clean: true,
      code_coverage: true)
    slather(
      cobertura_xml: true,
      output_directory: "fastlane/test_output/",
      ignore: ["**/UIViewController+Testeable.swift"],
      scheme: "FizzBuzz",
      proj: "FizzBuzz.xcodeproj",
      workspace: "FizzBuzz.xcworkspace")
end

after_all do |lane|
end

error do |lane, exception|
end
end